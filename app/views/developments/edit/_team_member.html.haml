-# This is really a form for a nested relationship, DevelopmentTeamMemberships
%tr
  %td
    = select_tag :role, options_for_select(DevelopmentTeamMembership.role.options)
  %td
    %h5.ui.header
      %img.ui.mini.rounded.image{ src: member.organization.logo }
        .content
          = member.organization.short_name
          %i.mini.red.inverted.circular.close.icon
          .sub.header
            = member.organization.location
